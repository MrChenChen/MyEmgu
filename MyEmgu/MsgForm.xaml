<Window x:Class="MyEmgu.MsgForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyEmgu"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="MsgForm"
        Width="340"
        Height="187"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SnapsToDevicePixels="True"
        Topmost="True"
        WindowStyle="None"
        mc:Ignorable="d">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation AccelerationRatio="0.8"
                                        DecelerationRatio="0.2"
                                        Duration="0:0:0.5"
                                        From="350,10,-350,10"
                                        Storyboard.TargetName="MianGrid"
                                        Storyboard.TargetProperty="Margin"
                                        To="10,10,10,10" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="Window.Unloaded">
            <BeginStoryboard>
                <Storyboard Name="FormUnload_Storyboard">
                    <ThicknessAnimation AccelerationRatio="0.2"
                                        DecelerationRatio="0.8"
                                        Duration="0:0:0.5"
                                        From="10,10,10,10"
                                        Storyboard.TargetName="MianGrid"
                                        Storyboard.TargetProperty="Margin"
                                        To="350,10,-350,10" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Name="MianGrid"
          Margin="10"
          Background="{DynamicResource MainColor}"
          MouseDown="MianGrid_MouseDown">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" />
        </Grid.Effect>
        <Grid Margin="5" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="124*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <TextBlock Name="textMessage"
                       Grid.ColumnSpan="2"
                       Margin="15" />

            <Button Name="buttonOk"
                    Grid.Row="1"
                    Width="71"
                    Height="25"
                    Click="buttonOk_Click"
                    Content="确定"
                    Cursor="Hand" />
            <Button Name="buttonCancle"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="71"
                    Height="25"
                    Click="buttonCancle_Click"
                    Content="取消"
                    Cursor="Hand" />
        </Grid>
    </Grid>
</Window>