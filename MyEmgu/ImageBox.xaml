<UserControl x:Class="MyEmgu.ImageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyEmgu"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="imagebox"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>

        <ContextMenu x:Key="ImageBoxContextMenu" Style="{x:Null}" >
            <MenuItem Click="LoadImage_Click"
                      Header="装载图像"
                      Style="{x:Null}" />
            <MenuItem Header="保存当前图像" Style="{x:Null}" />
        </ContextMenu>

    </UserControl.Resources>
    <Grid Background="Transparent" MouseRightButtonDown="Grid_MouseRightButtonDown">
        <Image Name="mainimg"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="{Binding Path=Image,
                                ElementName=imagebox}" />
    </Grid>
</UserControl>
